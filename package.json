{
  "name": "workspace-notes",
  "displayName": "workspace-notes",
  "description": "Manage markdown notes in a centralized repository, while access them quickly based on workspace.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:workspace-notes.newNote",
    "onCommand:workspace-notes.listAllNotes",
    "onCommand:workspace-notes.pickWorkspaceNote",
    "onCommand:workspace-notes.addWorkspaceTag"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workspace-notes.newNote",
        "title": "Workspace Notes: Create a New Note"
      },
      {
        "command": "workspace-notes.listAllNotes",
        "title": "Workspace Notes: List all notes"
      },
      {
        "command": "workspace-notes.pickWorkspaceNote",
        "title": "Workspace Notes: Pick a workspace note to open"
      },
      {
        "command": "workspace-notes.addWorkspaceTag",
        "title": "Workspace Notes: Add workspace tag to current note"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "from workspace-note",
      "properties": {
        "workspaceNotes.noteRepoPath": {
          "type": "string",
          "default": "",
          "description": "Path to note repository."
        },
        "workspaceNotes.ignorePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".*/\\..*|^\\..*"
          ],
          "description": "Regular expressions for file names to ignore when parsing documents in note folder."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "8.6.0",
    "eslint-plugin-unicorn": "^40.0.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/klaw": "^3.0.3",
    "@types/through2": "^2.0.36",
    "fs-extra": "^10.0.0",
    "gray-matter": "^4.0.3",
    "klaw": "^4.0.1"
  }
}
